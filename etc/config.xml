<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <mpbannerslider>
            <general>
                <enabled>1</enabled>
            </general>
            <mpbannerslider_design>
                <responsive>0</responsive>
                <autoWidth>0</autoWidth>
                <autoHeight>1</autoHeight>
                <loop>1</loop>
                <nav>0</nav>
                <dots>0</dots>
                <lazyLoad>0</lazyLoad>
                <autoplay>1</autoplay>
                <autoplayTimeout>5000</autoplayTimeout>
            </mpbannerslider_design>
        </mpbannerslider>
    </default>
</config>